{
  "name": "@numisma/db",
  "version": "0.2.0",
  "description": "Database layer for Numisma",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./generated/client/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./generated/client/index.d.ts"
    },
    "./prisma": {
      "require": "./dist/prisma.js",
      "import": "./dist/prisma.mjs",
      "types": "./generated/client/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsc -p tsconfig.build.json && pnpm db:generate && tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "db:push:prod": "dotenv -e .env.production -- prisma db push",
    "db:studio:prod": "dotenv -e .env.production -- prisma studio"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [],
  "author": "Numisma Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.5.7",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.48.0",
    "prisma": "^6.6.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@numisma/types": "workspace:*",
    "@prisma/client": "^6.6.0",
    "zod": "^3.22.2"
  }
}
