{
  "name": "@numisma/db",
  "version": "0.2.0",
  "description": "Database layer for Numisma",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./prisma": {
      "require": "./dist/prisma.js",
      "import": "./dist/prisma.mjs",
      "types": "./dist/prisma.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && esbuild src/index.ts src/prisma.ts --format=cjs --outdir=dist --platform=node --target=node16 --sourcemap",
    "dev": "npm run build -- --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [],
  "author": "Numisma Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.5.7",
    "esbuild": "^0.20.0",
    "eslint": "^8.48.0",
    "prisma": "^6.5.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@numisma/types": "workspace:*",
    "@prisma/client": "^6.5.0",
    "zod": "^3.22.2"
  }
}
